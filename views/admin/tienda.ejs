<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Tienda - administrador</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    </head>

    <body>
    <!-- Incluir la navegación -->
    <%- include ../partials/navbar.ejs %> <br>

    <div class="container mt-5">
        <h1>Panel de Tienda - Administrador</h1>
        <p>Bienvenido al panel de administración de la tienda.</p>
        <a href="/usuarios/admin/productos/agregar" class="btn btn-success">Agregar Producto</a>
        <a href="/admin/categorias" class="btn btn-primary">Administrar Categorías</a>

        <div class="row">
        <!-- Menú lateral de categorías -->
        <aside class="col-md-3">
            <h4>Categorías</h4>
            <ul class="list-group">
            <li class="list-group-item"><a href="/usuarios/usuarios/categorias/accesorios">Accesorios</a></li>
            <li class="list-group-item"><a href="/usuarios/usuarios/categorias/bolsos">Bolsas</a></li>
            <li class="list-group-item"><a href="/usuarios/usuarios/categorias/sombreros">Sombreros</a></li>
            <!-- <li class="list-group-item"><a href="/usuarios/usuarios/categorias/pulseras">Pulseras</a></li> -->
            <li class="list-group-item"><a href="/usuarios/usuarios/categorias/blusas">Blusas</a></li>
            <li class="list-group-item"><a href="/usuarios/usuarios/categorias/peluches">Peluches</a></li>
            <li class="list-group-item"><a href="/usuarios/usuarios/categorias/llaveros">Llaveros</a></li>
            </ul>
        </aside>

        <!-- Sección de productos -->
        <main class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Tienda Online</h1>
            <button class="btn btn-outline-secondary">Filtrar</button>
        </div>

        <div class="row">
            <% if (Array.isArray(productos) && productos.length > 0) { %>
            <% productos.forEach(producto => { %>
                <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <a href="/usuarios/producto/<%= producto.id_producto %>">
                    <img src="<%= producto.imagen_url %>" class="card-img-top img-fluid" alt="<%= producto.nombre_producto %>">
                    </a>
                    <div class="card-body text-center">
                    <h5 class="card-title">
                        <a href="/usuarios/producto/<%= producto.id_producto %>" class="text-decoration-none text-dark">
                        <%= producto.nombre_producto %>
                        </a>
                    </h5>
                    <p class="card-text text-success"><strong>$<%= producto.precio %></strong></p>
                    <a href="/usuarios/admin/productos/editar/<%= producto.id_producto %>" class="btn btn-success">Editar</a>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDelete<%= producto.id_producto %>">Eliminar</button>
                    </div>
                </div>
                </div>

                <!-- Modal de confirmación de eliminación -->
                <div class="modal fade" id="confirmDelete<%= producto.id_producto %>" tabindex="-1" aria-labelledby="confirmDeleteLabel<%= producto.id_producto %>" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="confirmDeleteLabel<%= producto.id_producto %>">¿Eliminar producto?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Estás seguro de que deseas eliminar <strong><%= producto.nombre_producto %></strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <a href="/usuarios/admin/productos/eliminar/<%= producto.id_producto %>" class="btn btn-danger">Eliminar</a>
                    </div>
                    </div>
                </div>
                </div>
            <% }); %>
            <% } else { %>
            <p>No hay productos disponibles en la tienda.</p>
            <% } %>
        </div>
        </main>

        </div>
    </div>

    <!-- Incluir el footer -->
    <%- include ../partials/footer.ejs %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
