<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página de Bienvenida</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Incluir la navegacion -->
    <%- include partials/navbar.ejs %>


    <!-- Contenido principal -->
    <section class="container mt-4">
        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/img50.avif" class="d-block w-100" alt="Oferta 1">
                </div>
                <div class="carousel-item">
                    <img src="/img/img51.avif" class="d-block w-100" alt="Oferta 2">
                </div>
                <div class="carousel-item">
                    <img src="/img/img52.avif" class="d-block w-100" alt="Oferta 3">
                </div>
                <div class="carousel-item">
                    <img src="/img/img53.avif" class="d-block w-100" alt="Oferta 3">
                </div>
                <div class="carousel-item">
                    <img src="/img/img54.avif" class="d-block w-100" alt="Oferta 3">
                </div>
                <div class="carousel-item">
                    <img src="/img/img55.avif" class="d-block w-100" alt="Oferta 3">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Siguiente</span>
            </button>
        </div>
        <div class="container mt-5">
            <h2 class="text-center mb-4">Productos Destacados</h2>
            <div class="row">
                <!-- <% if (Array.isArray(productos) && productos.length > 0) { %> -->
                    <% productos.forEach(producto => { %>
                        <div class="col-md-3 mb-4">
                            <div class="card">
                                <img src="<%= producto.imagen_url %>" class="card-img-top img-fluid" alt="<%= producto.nombre_producto %>">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><%= producto.nombre_producto %></h5>
                                    <p class="card-text text-success"><strong>$<%= producto.precio %></strong></p>
                                    <button class="btn btn-primary agregar-carrito" data-id="<%= producto.id_producto %>">Agregar al carrito</button>
                                    <a href="/usuarios/tienda" class="btn btn-success">Ver más</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-center">No hay productos disponibles en este momento.</p>
                <% } %>
        </div>
</div>

    </section>
    <!-- Incluir el footer -->
    <%- include partials/footer.ejs %>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/carrito.js"></script>
</body>

</html>